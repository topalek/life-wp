.service-item
  margin-bottom: 55px
  min-height: 310px
.service-title
  margin: 0
  span
    font-family NeoSansProBold, Tahoma, Arial, sans-serif
.service-list
  margin: 15px 0
  .service-list-item
    margin: 10px 0
    font-size: 14px
.more-link
  color #8c8c8c
  span
    display: inline-block
    transition all .2s ease-in-out
  &:hover
    color #8c8c8c
    span
      margin-left 5px

.icon-svg
  width: 3.5em;
  height: 3.5em;
  stroke-width: 0;
  stroke: currentColor;
  fill: currentColor;
  margin-right: 7px;
  display: inline-block;