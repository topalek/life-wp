.portfolio-img,.review-img
  background: url("../img/portfolio-bg.jpg") no-repeat center
  height 300px
  position: relative
  margin-bottom: 50px
  background-size: cover

.review-img
  background: url("../img/reviews-bg.jpg") no-repeat center
.portfolio-post-type-wedding
  margin: 50px 0

.portfolio.service-list
  color: #000
  padding-left: 10px
  .service-list-item
    margin: 12px 0
    position: relative
    padding-left: 20px
    &:after
      display: block
      content ''
      width: 7px
      height: 7px
      border-radius 50%
      background-color: #29c689
      position: absolute
      left: 5px
      top: 6px

.entry
  padding-left: 80px
  margin: 20px 0

.owl-carousel
  position: relative
  margin: 20px 0
  &:after
    display: block
    content ''
    width: 100%
    height: 2px
    border-radius 4px
    background-color: accent-color
    position: relative
    bottom: -5px
  .owl-nav
    padding: 0 20px;
    .owl-next,.owl-prev
      background: url("../img/svg/arr-d.svg") no-repeat center
      transform rotate(-90deg)
      padding: 10px 10px;
      background-size: 50%
      color accent-color
    .owl-prev
      float: left
      transform rotate(90deg)
    .owl-next
      float: right
  .owl-dots
    position: absolute;
    bottom: -24px;
    left: 50%;
    transform: translateX(-50%);

  .owl-dot
    display: inline-block
    span
      width: 8px
      height: 8px
      border 2px solid accent-color
      border-radius 50%
      display: block
      margin: 0 5px
    &.active
      span
        width: 10px
        height: 10px
        top 1px
        position: relative
        background-color: accent-color;
