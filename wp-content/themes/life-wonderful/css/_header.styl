#header_top
  background-color: #e6e6e6
  line-height: 30px

.header_email, .header_phone
  margin: 0 10px
  a
    color: #333

#header_nav
  background: header_bg_color url("../img/header-pattern.png") repeat-x
  color #f8e8d8
  height: 60px
  font-size: 16px
  border-bottom: 1px solid #e1e1e1;
  .nav-item
    margin: 0 15px

.nav-container
  position: relative
.header_search
  position: absolute
  visibility hidden
  top: 0
  right: 0
  width: 7%
  height: 100%
  transition all .3s ease-in
  &.active
    width: 82%
    visibility visible
.form-search
  width: 100%
  height: 100%
  padding: 9px 0
  position relative
  #close-search
    position: absolute
    right: 10px
    top 10px
    padding: 4px;
    font-size: 22px;
    cursor: pointer;
    color: header_bg_color;
.input-search
  float left
  width: 100%
  height: 100%
  border none
  outline none
  border-radius:7px
  padding 5px 20px
  padding-left: 50px
button.input-submit
  color main-color
  position: absolute
  font-size 22px
  left: 0
  height: 41px
  width: 41px
  z-index: 1
  background: #fff
  border none
  outline none
  border-radius:7px
  &:acive,&:focus
    border none
    outline none

.nav-item
  float: left

.logo
  margin-top: 8px
  margin-bottom: 13px
  display: inline-block
  & >div
    color: l_color

.logo_header
  text-transform: uppercase
  font-family NeoSansProBold, Tahoma, Arial, sans-serif

.search_trigger
  cursor: pointer;
  padding: 8px;
  margin-top: 8px;
  font-size 22px


ul.link_group
  overflow: hidden;
  margin-top: 9px;
  li
    float: left;
    font-size: 16px;
    a, span.active
      border: 1px solid #f5e7d7
      border-right: none
      padding: 10px;
      display: inline-block
      color: l_color
      transition all .2s ease-in-out
      background-color: transparent
      &:hover
        background-color: rgba(47, 30, 25, 0.43)
    &.current-menu-item
      a, span.active
        background-color: accent-color
    &:last-child
      a, span.active
        border-right: 1px solid l_color
        border-radius 0 7px 7px 0
    &:first-child
      a, span.active
        border-radius 7px 0 0 7px

.nav
  li
    display: block
    float: left
    a, span.active
      display: inline-block
      line-height: 59px
      text-transform: capitalize
      padding: 0 10px
      transition all .2s ease-in-out
      background-color: transparent
      color: l_color
      &:hover
        background-color: rgba(47, 30, 25, 0.43)
    &.current-menu-item
      a, span.active
        color: #fff
        font-weight: bold

#nav-icon-close
  display: none
  width: 40px;
  height: 34px;
  top: 12px
  right: 0
  position: absolute;
  transform: rotate(0deg);
  transition: .5s ease-in-out;
  cursor: pointer;
  span
    display: block;
    position: absolute;
    height: 4px;
    width: 100%;
    background: l_color;
    border-radius: 9px;
    opacity: 1;
    left: 0;
    transform: rotate(0deg);
    transition: .25s ease-in-out;
  span:nth-child(1)
    top: 0;
  span:nth-child(2)
    top: 45%;
  span:nth-child(3)
    bottom: 0;
  &.open
    span:nth-child(1)
      top: 18px;
      transform: rotate(135deg);
    span:nth-child(2)
      opacity: 0;
      left: -60px;
    span:nth-child(3)
      top: 18px;
      transform: rotate(-135deg);

#menu-wrapp
  left 999px

#header_nav
  .nav-container.opened
    .nav-item
      margin: 0
      float: none
    #menu-wrapp
      visibility: visible
      position: absolute;
      clear both
      width:100%;
      left 0
      transition all .25s ease-in-out
      .menu-item, .header_search
        position: relative;
        left 0
        z-index: 5;
        .nav
          li
            display: block;
            float: none;
            padding: 7px 0
            background-color: header_bg_color;
            padding-left: 20px;
            border-bottom: 1px solid #79635a;
            a, span
              line-height: 35px;
              width: 100%
            &.current-menu-item
              a, span
                border-left 2px solid
      .header_search
        visibility visible
        float: none;
        padding: 7px 0
        background-color: header_bg_color;
        padding-left: 20px;
        width: 100%
        transition none
        .form-search
          width: 95%
          padding: 0
          .input-search
            float: none
            padding: 12px 20px
          .input-submit
            position: absolute
            top: 0
            right: 0
            left auto



    .link_group
      margin: 0
      li
        display: block;
        float: none;
        padding: 7px 0
        background-color: header_bg_color;
        padding-left: 20px;
        border-bottom: 1px solid #79635a;
        a
          border none
          display: block
          border-radius 0
          width: 100%
        &.current-menu-item
          a
            border-left 2px solid
            background-color: transparent;


