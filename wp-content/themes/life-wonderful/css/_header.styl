section
  background #fff
  padding: 30px 15px
  position: relative
section#form
  background-color: transparent
.arr_top
  position: relative
  &:after
    display: block
    position: absolute
    content ''
    width: 56px
    height: 56px
    border-radius 50%
    top: -30px
    left 50%
    background: #fff url(../img/svg/arr-d.svg) no-repeat 50%
    background-size: 25%
    transform translateX(-50%)
  &.border
    &:before
      display: block
      position: absolute
      content ''
      width: 62px
      height: 62px
      border-radius 50%
      top: -32px
      left 50%
      transform translateX(-50%) rotate(-45deg)
      border 3px solid accent-color
      border-top-color transparent
      border-right-color transparent

