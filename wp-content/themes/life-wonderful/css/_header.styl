a.my-btn
  padding: 20px 25px
  display: inline-block
  text-align: center
  font-size: 16px
  font-family: NeoSansProRegular, Tahoma, Arial, sans-serif
  font-weight: bold
  background: accent-color
  background: linear-gradient(to bottom, #ff5859 0%, #d43334 100%)
  box-shadow 0 7px 13px rgba(0, 0, 0, .4), 0 6px 0 rgba(0, 0, 0, .4)
  border-radius: 5px
  transition all .2s ease-in-out
  color: #fff
  &.simple
    color: #fff
    width: 100%;
    background: accent-color;
    padding: 15px 20px;
    &:hover,
    &:focus,
    &:active
      background: darken(accent-color,15%);
  &.ghost
    width: 100%;
    color: accent-color;
    background: transparent;
    border: 1px solid accent-color
    box-shadow: none;
    padding: 25px 20px;
    &:hover,
    &:focus,
    &:active
      background: transparent;
      color: darken(accent-color,15%)
      border: 1px solid darken(accent-color,15%)
    &.active
      color #fff
      background: accent-color;
  &:hover,
  &:active
    background: linear-gradient(to bottom, #d43334 0%, #d43334 100%)
    color #fff
  &:focus
    color #fff
